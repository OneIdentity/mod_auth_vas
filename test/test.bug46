# Bug 46 was a nasty one - passing a valid username but invalid password led
# to the user still being granted access.
description "Basic auth (bug 46)"

TESTFILE=test-bug46-pid$$.txt
OUTPUTFILE=/tmp/test-bug46-orig-$$
STATUSFILE=/tmp/mav-bug46-status-$$

cleanup () {
   ap_stop
   ap_conf_restore
   rm -f $DOC_DIR/$TESTFILE $STATUSFILE $COMPAREFILE
}

trap cleanup 0 1 2

ap_conf_save

ap_conf_append <<-END
	LogLevel debug
	<Directory "$DOC_DIR">
		AuthType VAS
		AuthVasUseBasic on
		Require user testuser
	</Directory>
END

ap_conf_check

echo "test file for pid $$" > $DOC_DIR/$TESTFILE

ap_start

fetch_basic -e $STATUSFILE testuser:testuser $DOC_URL/$TESTFILE > $OUTPUTFILE
if [ `cat $STATUSFILE` != 200 ] || ! cmp $OUTPUTFILE $DOC_DIR/$TESTFILE; then
	fail "Resource not served for correct user & password"
fi

fetch_basic -e $STATUSFILE testuser:wrongpassword $DOC_URL/$TESTFILE > /dev/null
if [ `cat $STATUSFILE` = 200 ]; then
	fail "Password not checked properly"
fi
